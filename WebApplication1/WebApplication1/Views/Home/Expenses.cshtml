@{
    ViewData["Title"] = "Expenses Page";
}
@model List<WebApplication1.Models.Expenses>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Value</td>
                    <td>@expense.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>